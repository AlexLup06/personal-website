{
  "name": "presonal-website",
  "version": "1.0.0",
  "scripts": {
    "prod:webpack": "npx webpack build --mode production",
    "dev:webpack": "npx webpack --mode development --watch",
    "dev:tailwind": "npx tailwindcss -i ./src/css/style.css -o ./src/css/tailwind.css --watch",
    "dev:all": "concurrently \"npm run dev:tailwind\" \"npm run dev:webpack\""
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.1",
    "postcss-loader": "^8.1.1",
    "tailwindcss": "^3.4.17",
    "ts-loader": "^9.5.1",
    "typescript": "^5.7.2",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1"
  }
}
