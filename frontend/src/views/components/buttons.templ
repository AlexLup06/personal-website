package components

templ Lg() {
	<button
		class="px-5 py-3 rounded-2xl active:scale-95 hover:bg-second-50 text-white hover:text-second-500 
				outline outline-2 outline-second-500 transition 
			  bg-second-500 flex items-center gap-2 w-fit text-lg"
	>
		{ children... }
	</button>
}

templ EmailButton() {
	<button class="btn-grad px-5 py-3 rounded-2xl shadow-inner text-xl gap-2 flex items-center w-fit active:scale-90">
		<div class="w-6 ">
			@Mail()
		</div>
		<p>
			Contact Me!
		</p>
	</button>
}

templ EmailButtonSM() {
	<button class="btn-grad px-4 py-2.5 rounded-2xl shadow-inner text-lg gap-2 flex items-center w-fit active:scale-90">
		<div class="w-5 ">
			@Mail()
		</div>
		<p>
			Email
		</p>
	</button>
}
